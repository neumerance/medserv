<tr id="user-<%= user.id %>">
  <td><%= user.email %></td>
  <td>
    <%= link_to 'Edit', url_for(action: :edit, id: user.id), class: 'btn btn-sm btn-default', remote: true %>
    <%=
      link_to 'Delete', url_for(action: :destroy, id: user.id),
      class: 'btn btn-sm btn-danger',
      remote: true,
      data: { confirm: 'Are you sure you want to delete this user?' },
      method: :delete
    %>
  </td>
</tr>
