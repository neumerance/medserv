<% if @user.errors.any? %>
  $.notify(
    "<%= @user.errors.full_messages.join('\n').html_safe %>",
    'error'
  );
<% else %>
  $('#usersContainer table tbody').prepend('<%= escape_javascript(render partial: 'table_row', locals: { user: @user }) %>')
  $('#userModal').modal('hide');
  $.notify(
    'Created a new user',
    'success'
  );
<% end %>
