<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
  <div class="text-center">
    <%= image_tag 'logo.png', height: 90, class: 'mb-4' %>
    <h1 class="h3 mb-3 font-weight-normal">MEDServ</h1>
  </div>
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <a class="close" data-dismiss="alert">&times;</a><%= notice %>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <a class="close" data-dismiss="alert">&times;</a><%= alert %>
    </div>
  <% end %>
  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
  <%= f.label :password, class: 'sr-only' %>
  <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  <%= f.submit 'Sign In', class: 'btn btn-lg btn-primary btn-block' %>
  <p class="mt-5 text-muted text-center">UNTV News and Rescue Singapore</p>
  <p class="mb-3 text-muted text-center">Â© 2019</p>
<% end %>
